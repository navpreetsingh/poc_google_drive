<div>
	<p>Upload File</p>
	<%= form_tag "/dashboard/upload", multipart: true do %>
		<%= file_field_tag "File" %> 
		<%= submit_tag "Submit" %> 
	<% end %> 	
</div>

<div>
	<p>Create Folder</p>
	<%= form_tag "/dashboard/cr_folder" do %>
		<%= text_field_tag :folder %> 
		<%= submit_tag "Submit" %> 
	<% end %> 	
</div>
<div>
	<p>Search File (Full Name of file with extension) [Could also be implemented for full text]</p>
	<%= form_tag "/dashboard/working_platform" do %>
		<%= search_field_tag :search %> 
		<%= submit_tag "Submit" %> 
	<% end %>
<div>

</div>
 
<table>
	<tr>
		<th>Name</th>
		<th>type</th>	
		<th>Download Link</th>
	</tr>
	<% @files.each do |file| %>
		<tr>		
			<td><%= file.title %> </td>
			<% type = if file.class == GoogleDrive::Collection
					"Folder" 
				elsif file.class == GoogleDrive::Spreadsheet
				   	"Spreadsheet"
				else
					"File"
				end 
			%> 
			<td> <%= type %> </td>
			<% file_path = Rails.root.join("public/google_drive/" + file.title) %>
			<td>							
				<%=	if type == "File"
						link_to "Download", file.download_url
					elsif type == "Spreadsheet"
						link_to "Download", file.export_links["application/vnd.openxmlformats-officedocument.spreadsheetml.sheet"] 
					else
						""
					end
				%>
			</td>
		</tr>
	<% end %> 	
</table>

